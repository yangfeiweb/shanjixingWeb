<script>
import url from "@/service/urlConfig";
import { ResourcePath } from "../../service/urlConfig";
import VueBetterScroll from "vue2-better-scroll";
import navHeader from "@/components/navHeader";
import dataService from "@/service/index";
import changepassDialog from "../personCenter/changepassDialog";
import changeinfoDialog from "../personCenter/changeInfoDialog";
import aboutDialog from "../personCenter/aboutDialog";
import { IMAGE_PATH, IMG_TYPE, EVENT } from "../../utility/dict";
import { utility, getRequestSign } from "../../utility";
import uploadIconDialog from "../personCenter/uploadIconDialog";
export default {
  components: {
    navHeader,
    changepassDialog,
    changeinfoDialog,
    VueBetterScroll,
    aboutDialog,
    uploadIconDialog
  },
  data() {
    return {
      uploadIconDialogShow: false,
      token: "",
      iconImgurl: "",
      imgLoading: false,
      aboutDialogShow: false,
      isSelected: false,
      selectItem: 0,
      activeName2: "first",
      showDialog: false,
      url: ResourcePath,
      changeDialogShow: false,
      changeInfodialogShow: false,
      name: "未填写姓名",
      dataNumber: "VIP已过期",
      userInfo: {},
      serviceUrl: url,
      Icons: [],
      iconFile: ""
    };
  },
  created() {},
  mounted() {
    this.getUserInfo();
  },
  methods: {
    selectIcons() {
      this.uploadIconDialogShow = true;
    },
    updateInfo() {
      this.changeInfodialogShow = true;
    },
    getUserInfo() {
      dataService.getUserInfo().then(
        res => {
          let result = res.data;
          let data = result.data;
          let code = result.code;
          let msg = result.msg;
          if (code == 200) {
            this.userInfo = data;
            this.iconImgurl = localStorage.getItem("icon");
            if (data.hasOwnProperty("icon") === false) {
              this.iconImgurl = "static/userAvatar/default.png";
            } else if (data.hasOwnProperty("icon") === true) {
              this.iconImgurl =
                "http://192.168.0.22:8888/sjx/public" + data.icon;
            }
            if (data.hasOwnProperty("name") === false) {
              this.name = "未填写姓名";
            } else if (data.hasOwnProperty("name") === true) {
              this.name = data.name;
            }
            var s1 = data.vipDeadTime;
            s1 = new Date(s1.replace(/-/g, "/"));
            var s2 = new Date(); //当前日期
            var days = s1.getTime() - s2.getTime();
            var time = parseInt(days / (1000 * 60 * 60 * 24));
            if (time < 0) {
              this.dataNumber = "您的vip已过期,请尽快充值";
            } else {
              this.dataNumber = `有效期:${time}天`;
            }
          } else {
            this.$message.error(msg);
          }
        },
        err => {
          this.$message.error("请求错误");
        }
      );
    },
    open() {
      this.$prompt("充值密码", "账户充值", {
        confirmButtonText: "确定",
        cancelButtonText: "取消",
        inputPattern: /\S/,
        inputErrorMessage: "充值密码不能为空",
        center: true
      })
        .then(value => {
          console.log();
          let payNo = value.value;
          dataService.pay(payNo, "CHARGE_CARD", "CHARGE_CARD").then(
            res => {
              let result = res.data;
              let code = result.code;
              let msg = result.msg;
              if (code == 200) {
                this.$message.success(msg);
              } else {
                this.$message.error(msg);
              }
            },
            err => {
              this.$message.error("请求错误");
            }
          );
        })
        .catch(() => {
          this.$message({
            type: "info",
            message: "取消输入"
          });
        });
    }
  }
};
</script>
